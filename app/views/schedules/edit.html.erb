<div class="information">
  <h2>スケジュール編集</h2>
</div>

<% @schedule.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>

<%= form_for @schedule do |f| %>
  <table>
    <tbody>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :schedule_start, "開始日" %></th>
        <td><%= f.datetime_field :schedule_start %></td>
      </tr>
      <tr>
        <th><%= f.label :schedule_end, "終了日"%></th>
        <td><%= f.datetime_field :schedule_end %></td>
      </tr>
      <tr>
        <th><%= f.label :all_day, "終日"%></th>
        <td>
          <%= f.check_box :all_day %>
          <%= label_tag :all_day, "終日の場合はチェックを入れます" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </tbody>
  </table>

  <div>
    <ul>
      <li><%= f.submit "スケジュール編集を完了する" %></li>
      <li><%= link_to("スケジュール一覧に戻る","/") %></li>
    </ul>
  </div>
<% end %> 
